<Window x:Class="GroupProject.View.TeacherDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.View"
        mc:Ignorable="d"
        Title="TeacherDashboard" Height="450" Width="800">
    <Grid>
        <Image Source="\Images\image3.jpg" 
               Stretch="UniformToFill" />
        <Grid Background="#CC000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <Button Content="Add Student" Width="287" Click="Button_Click" Margin="2 10"/>
                <Button Content="Student Details" Width="287" Click="Button_Click_1" Margin="2 10"/>
                <Button Content="Remove Student" Width="287" Click="Button_Click_2" Margin="2 10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
